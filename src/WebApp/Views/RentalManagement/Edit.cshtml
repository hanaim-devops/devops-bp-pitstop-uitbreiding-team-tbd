@model Pitstop.WebApp.ViewModels.RentalManagementNewViewModel
@{
    ViewData["Title"] = "Rent a Car";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<h3 id="PageTitle">Rental Management - rent a car</h3>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="well-sm alert-danger">
        <label>Unable to register: @Model.Error</label>
    </div>
}

<form asp-controller="RentalManagement" asp-action="UpdateCarRental" method="post">
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedRentalCarId"></label>
        <select asp-for="SelectedRentalCarId" asp-items="Model.RentalCars" class="form-control"></select>
        <span asp-validation-for="SelectedRentalCarId" class="text-danger"></span>
    </div>
    <input asp-for="SelectedCustomerId" value="@Model.SelectedCustomerId" type="hidden" />
    <input asp-for="Id" value="@Model.Id" type="hidden" />

    <span><button id="SubmitButton" type="submit" class="btn btn-default">Save</button></span>
    <span><a id="CancelButton" asp-action="Details" asp-route-rentalId="@Model.Id" asp-controller="RentalManagement" class="btn btn-default">Cancel</a></span>
</form>


