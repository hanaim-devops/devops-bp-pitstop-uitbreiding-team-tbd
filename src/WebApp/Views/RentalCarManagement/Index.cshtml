@model Pitstop.WebApp.ViewModels.RentalCarManagementViewModel
@{
    ViewData["Title"] = "Rental Car Management";
}
<h3 id="PageTitle">Rental Car Management - overview</h3>


<table class="table">
    <thead>
    <tr>
        <th>License No.</th>
        <th>Brand</th>
        <th>Type</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rentalCar in Model.RentalCars)
    {
    <tr class="clickable" onclick="location.href = '@(Url.Action("Details", "RentalCarManagement", new { licenseNumber = rentalCar.LicenseNumber }))'">
        <td>@rentalCar.LicenseNumber</td>
        <td>@rentalCar.Model.Brand.Name</td>
        <td>@rentalCar.Model.Name</td>
        <td>
            <form asp-action="Delete" asp-controller="RentalCarManagement" asp-route-rentalCarId="@rentalCar.Id" method="post">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this rental car?');">Delete</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>

<a id="RegisterRentalCarButton" asp-action="New" asp-controller="RentalCarManagement" class="btn btn-default">Add rental car</a>
